{
  "name": "@schnitzel/cms",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "deploy": "bun run build && wrangler deploy",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "generate:types": "payload generate:types",
    "generate:importmap": "payload generate:importmap",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "db:introspect": "drizzle-kit introspect",
    "db:apply:local": "wrangler d1 migrations apply schnitzel-db --local",
    "db:apply:remote": "wrangler d1 migrations apply schnitzel-db --remote",
    "db:query": "wrangler d1 execute schnitzel-db --local --command",
    "db:query:remote": "wrangler d1 execute schnitzel-db --remote --command",
    "db:export": "wrangler d1 export schnitzel-db --local --output ./backup.sql",
    "db:export:remote": "wrangler d1 export schnitzel-db --remote --output ./backup.sql",
    "db:types": "payload generate:types"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.3.0",
    "@payloadcms/db-d1-sqlite": "^3.69.0",
    "@payloadcms/next": "^3.69.0",
    "@payloadcms/richtext-lexical": "^3.69.0",
    "@payloadcms/storage-r2": "^3.69.0",
    "@payloadcms/ui": "^3.69.0",
    "@schnitzel/shared": "workspace:*",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.45.1",
    "next": "15.4.1",
    "payload": "^3.69.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "0.32.6"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "drizzle-kit": "^0.31.9",
    "wrangler": "^4.59.1"
  }
}
