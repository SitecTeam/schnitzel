---
import { cn } from "@/lib/utils";
import { buttonVariants } from "@/components/ui/button";
import { Play } from "lucide-react";
import Typography from "@/components/typography";

interface Props {
  variant?: "primary" | "secondary";
  class?: string;
}

const { class: className, variant = "primary" } = Astro.props;
---

<a
  target="_blank"
  rel="noopener noreferrer"
  href={variant === "primary"
    ? "https://schnitzelshow.podbean.com/"
    : "https://www.youtube.com/@schnitzelsnow"}
  class={cn(
    buttonVariants({ variant }),
    variant === "secondary" && "xl:pr-6",
    "lg:px-3 lg:py-1.5 xl:px-4 xl:py-2",
    className
  )}
>
  <Typography
    tag="span"
    variant="button-regular"
    className="lg:text-[13px] lg:leading-[20px] xl:text-[17px] xl:leading-[27px]"
  >
    {variant === "primary" ? "Listen Now" : "Watch On Youtube"}
  </Typography>
  <Play className="lg:size-3 xl:size-5" />
</a>
