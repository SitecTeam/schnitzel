{
  "name": "schnitzel",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@schnitzel/web",
    "dev:cms": "turbo run dev --filter=@schnitzel/cms",
    "lint": "turbo run lint",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:web": "turbo run deploy --filter=@schnitzel/web",
    "deploy:cms": "turbo run deploy --filter=@schnitzel/cms",
    "postinstall": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.4.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.1"
  },
  "packageManager": "bun@1.2.18",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
